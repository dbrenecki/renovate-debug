{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>renovatebot/.github"],
  "enabledManagers": ["github-actions"],
  "dependencyDashboardApproval": false,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.github/workflows/checkmarx\\.yaml"],
      "matchStrings": [
        "uses: (?<depName>.*)/\\.github/actions/checkmarx@(?<currentValue>.*)"
      ],
      "datasourceTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "automerge": false,
      "matchManagers": ["github-actions"]
    },
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["dbrenecki/renovate-debug"],
      "extractVersion": "^checkmarx/(?<version>.*)$"
    }
  ]
}
