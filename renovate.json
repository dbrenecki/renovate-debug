{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>renovatebot/.github"],
  "enabledManagers": [
    "github-actions"
  ],
  "dependencyDashboardApproval": false,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.github/workflows/(?<compatibility>.*)\\.yaml"],
      "matchStrings": [
        "uses: (?<depName>.*)/\\.github/actions/(?<compatibility>.*)@(?<currentValue>.*)"
      ],
      "datasourceTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "automerge": false,
      "matchManagers": ["github-actions"]
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["dbrenecki/renovate-debug"],
      "extractVersion": "^(?<compatibility>.*)/(?<version>.*)$"
    }
  ]
}
